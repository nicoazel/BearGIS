<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug32</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>

    <ProjectGuid>{703C97F4-6606-4D85-993C-1CF0A90E6D19}</ProjectGuid>
    <OutputType>Library</OutputType>

    <RootNamespace>BearGIS</RootNamespace>
    <AssemblyName>BearGIS</AssemblyName>
    <Platforms>AnyCPU</Platforms>
    <UseWindowsForms>true</UseWindowsForms>
    <TargetFrameworks>net7.0-windows;net48</TargetFrameworks>
    <RestoreTargetFrameworks>net7.0-windows;net48</RestoreTargetFrameworks>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

    <BaseOutputPath>D:\_11_Git\BearGIS\BearGIS Plugin\BearGIS\bin</BaseOutputPath>

    <!-- Avoid duplicate compile and resource items -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <EnableDefaultEmbeddedResourceItems>false</EnableDefaultEmbeddedResourceItems>

  </PropertyGroup>





<PropertyGroup>
  <!-- Destination: a dedicated subfolder keeps things tidy -->
  <GrasshopperLibrariesDir>$(APPDATA)\Grasshopper\Libraries\BearGIS\BearGIS</GrasshopperLibrariesDir>
</PropertyGroup>

<!-- Copy for net7.0-windows (Rhino 8) -->
<Target Name="DeployToGrasshopper_net7"
        AfterTargets="Build"
        Condition="'$(TargetFramework)'=='net7.0-windows'">
  <PropertyGroup>
    <GhaOut>$(OutputPath)$(AssemblyName).gha</GhaOut>
    <GhaDestDir>$(GrasshopperLibrariesDir)</GhaDestDir>
    <GhaDest>$(GhaDestDir)\$(AssemblyName).gha</GhaDest>
  </PropertyGroup>

  <!-- Ensure destination exists -->
  <MakeDir Directories="$(GhaDestDir)" />

  <!-- Build .gha next to outputs -->
  <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(GhaOut)" OverwriteReadOnlyFiles="true" />

  <!-- Gather dependencies that live copy-local in the output folder -->
  <ItemGroup>
    <!-- Everything copy-local MSBuild resolved (NuGet/runtime deps, not the project's own dll) -->
    <LocalDeps Include="@(ReferenceCopyLocalPaths)" />
    <!-- Also include any additional DLLs produced or dropped into the output (but not the main .dll) -->
    <LocalDlls Include="$(OutputPath)*.dll" Exclude="$(OutputPath)$(AssemblyName).dll" />
    <!-- Satellite assemblies (localizations) -->
    <SatDeps Include="@(ReferenceSatellitePaths)" />
    <!-- Native copy-local items (e.g., .dll/.pdb native) -->
    <NativeDeps Include="@(NativeCopyLocalItems)" />
    <!-- Runtime config / deps manifests for .NET runtime binding if present -->
    <RuntimeManifests Include="$(OutputPath)*.runtimeconfig.json;$(OutputPath)*.deps.json" />
    <!-- Optional: symbols for easier debugging in Rhino -->
    <Pdbs Include="$(OutputPath)*.pdb" />
  </ItemGroup>

  <!-- Copy the plugin -->
  <Copy SourceFiles="$(GhaOut)" DestinationFiles="$(GhaDest)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" />

  <!-- Copy dependencies (skip unchanged keeps it fast) -->
  <Copy SourceFiles="@(LocalDeps);@(LocalDlls);@(SatDeps);@(NativeDeps);@(RuntimeManifests)"
        DestinationFolder="$(GhaDestDir)\"
        SkipUnchangedFiles="true"
        OverwriteReadOnlyFiles="true" />

  <!-- Optional: copy PDBs -->
  <Copy SourceFiles="@(Pdbs)" DestinationFolder="$(GhaDestDir)\"
        SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition=" '@(Pdbs)' != '' " />

  <Message Importance="high" Text="BearGIS net7 deployed: $(GhaDest)" />
</Target>

<!-- Copy for net48 (Rhino 7) -->
<Target Name="DeployToGrasshopper_net48"
        AfterTargets="Build"
        Condition="'$(TargetFramework)'=='net48'">
  <PropertyGroup>
    <GhaOut>$(OutputPath)$(AssemblyName).gha</GhaOut>
    <GhaDestDir>$(GrasshopperLibrariesDir)</GhaDestDir>
    <GhaDest>$(GhaDestDir)\$(AssemblyName).gha</GhaDest>
  </PropertyGroup>

  <MakeDir Directories="$(GhaDestDir)" />
  <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(GhaOut)" OverwriteReadOnlyFiles="true" />

  <ItemGroup>
    <LocalDeps Include="@(ReferenceCopyLocalPaths)" />
    <LocalDlls Include="$(OutputPath)*.dll" Exclude="$(OutputPath)$(AssemblyName).dll" />
    <SatDeps Include="@(ReferenceSatellitePaths)" />
    <NativeDeps Include="@(NativeCopyLocalItems)" />
    <Pdbs Include="$(OutputPath)*.pdb" />
  </ItemGroup>

  <Copy SourceFiles="$(GhaOut)" DestinationFiles="$(GhaDest)"
        SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" />

  <Copy SourceFiles="@(LocalDeps);@(LocalDlls);@(SatDeps);@(NativeDeps)"
        DestinationFolder="$(GhaDestDir)\"
        SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" />

  <Copy SourceFiles="@(Pdbs)" DestinationFolder="$(GhaDestDir)\"
        SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" Condition=" '@(Pdbs)' != '' " />

  <Message Importance="high" Text="BearGIS net48 deployed: $(GhaDest)" />
</Target>








  <!-- Debugging: launch correct Rhino per target -->
  <PropertyGroup Condition="'$(TargetFramework)'=='net48'">
    <StartAction>Program</StartAction>
    <StartProgram>C:\Program Files\Rhino 7\System\Rhino.exe</StartProgram>
    <!-- Optional: auto-open Grasshopper -->
    <StartArguments>-runscript:"_Grasshopper _Enter"</StartArguments>
