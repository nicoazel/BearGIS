<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug32</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>

    <ProjectGuid>{703C97F4-6606-4D85-993C-1CF0A90E6D19}</ProjectGuid>
    <OutputType>Library</OutputType>

    <RootNamespace>BearGIS</RootNamespace>
    <AssemblyName>BearGIS</AssemblyName>
    <Platforms>AnyCPU</Platforms>
    <UseWindowsForms>true</UseWindowsForms>
    <TargetFrameworks>net7.0-windows;net48</TargetFrameworks>
    <RestoreTargetFrameworks>net7.0-windows;net48</RestoreTargetFrameworks>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

    <BaseOutputPath>D:\_11_Git\BearGIS\BearGIS Plugin\BearGIS\bin</BaseOutputPath>
  </PropertyGroup>

  <!-- Debugging: launch correct Rhino per target -->
  <PropertyGroup Condition="'$(TargetFramework)'=='net48'">
    <StartProgram>C:\Program Files\Rhino 7\System\Rhino.exe</StartProgram>
    <DefineConstants>$(DefineConstants);RHINO7;NETFRAMEWORK</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net7.0-windows'">
    <StartProgram>C:\Program Files\Rhino 8\System\Rhino.exe</StartProgram>
    <DefineConstants>$(DefineConstants);RHINO8;NET7</DefineConstants>
  </PropertyGroup>

 <!-- Copy .dll to .gha after build (keeps the .dll as well) -->
  <Target Name="AfterBuild" AfterTargets="Build">
    <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(OutputPath)$(AssemblyName).gha" />
  </Target>

  <!-- net48: Rhino 7 via NuGet packages; DotSpatial 3.x; keep Harlow for now -->
  <ItemGroup Condition="'$(TargetFramework)'=='net48'">
    <PackageReference Include="RhinoCommon" Version="7.*" />
    <PackageReference Include="Grasshopper" Version="7.*" />

    <!-- DotSpatial 3.x line (for .NET Framework). -->
    <PackageReference Include="DotSpatial.Controls" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Data" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Data.Forms" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Extensions" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Modeling.Forms" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Positioning" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Projections" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Projections.Forms" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Serialization" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Symbology" Version="3.0.1" />
    <PackageReference Include="DotSpatial.Symbology.Forms" Version="3.0.1" />
    <!-- DotSpatial.Topology removed in v3+; code will be migrated to NTS equivalents. -->

    <PackageReference Include="Newtonsoft.Json" Version="13.*" />
    <!-- Retain Harlow only on net48; will be removed/replaced for net7 -->
    <PackageReference Include="Harlow" Version="0.6.0" />
  </ItemGroup>

  <!-- net7: Rhino 8 via NuGet for RhinoCommon; reference Grasshopper from install; DotSpatial 4.x -->
  <ItemGroup Condition="'$(TargetFramework)'=='net7.0-windows'">

    <PackageReference Include="RhinoCommon" Version="8.*" />
    <Reference Include="Grasshopper">
      <HintPath>C:\Program Files\Rhino 8\Plug-ins\Grasshopper\Grasshopper.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="GH_IO">
      <HintPath>C:\Program Files\Rhino 8\Plug-ins\Grasshopper\GH_IO.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- DotSpatial 4.x line (targets .NET 6/7, compatible with net7.0-windows) -->
    <PackageReference Include="DotSpatial.Data" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Data.Forms" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Extensions" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Modeling.Forms" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Positioning" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Projections" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Projections.Forms" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Serialization" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Symbology" Version="4.0.*" />
    <PackageReference Include="DotSpatial.Symbology.Forms" Version="4.0.*" />
    <!-- Do NOT include Harlow on net7 -->
  </ItemGroup>


  <ItemGroup>
    <Compile Include="Converters\BuildJsonAttributes.cs" />
    <Compile Include="Converters\ReProjectCoordinates.cs" />
    <Compile Include="Converters\PtLongLat.cs" />
    <Compile Include="Exporters\PolylineJSON.cs" />
    <Compile Include="Exporters\PolygonJSON.cs" />
    <Compile Include="MyCategoryIcon.cs" />
    <Compile Include="Converters\LongLatPt.cs" />
    <Compile Include="Importers\ReadGeoJson.cs" />
    <Compile Include="Exporters\PointJSON.cs" />
    <Compile Include="Exporters\PolygonSHP.cs" />
    <Compile Include="Exporters\PolylineSHP.cs" />
    <Compile Include="Exporters\PointSHP.cs" />
    <Compile Include="Importers\ReadDotShp.cs" />
    <Compile Include="Importers\ReadShp.cs" />
    <Compile Include="Exporters\PointESRI.cs" />
    <Compile Include="Exporters\PolygonESRI.cs" />
    <Compile Include="Importers\ReadESRIJson.cs" />
    <Compile Include="Exporters\PolyLineESRI.cs" />
    <Compile Include="BearGISInfo.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>


  <!-- Temporarily exclude files that rely on DotSpatial.Topology from net7 while migrating to NTS -->
  <ItemGroup Condition="'$(TargetFramework)'=='net7.0-windows'">
    <Compile Remove="Exporters\PointSHP.cs" />
    <Compile Remove="Exporters\PolylineSHP.cs" />
    <Compile Remove="Exporters\PolygonSHP.cs" />
    <Compile Remove="Importers\ReadDotShp.cs" />
    <Compile Remove="Importers\ReadShp.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net48'">
    <None Include="app.config" />
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <Compile Update="Properties\Resources.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Include="Resources\BearGISIconSet-14.png" />
    <None Include="Resources\BearGISIconSet-15.png" />
    <None Include="Resources\BearGISIconSet-16.png" />
    <None Include="Resources\BearGISIconSet-17.png" />
    <None Include="Resources\BearGISIconSet-18.png" />
    <None Include="Resources\BearGISIconSet-19.png" />
    <None Include="Resources\BearGISIconSet-20.png" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net48'">
    <StartProgram>C:\Program Files\Rhino 7\System\Rhino.exe</StartProgram>
    <DefineConstants>$(DefineConstants);RHINO7;NETFRAMEWORK</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net7.0-windows'">
    <StartProgram>C:\Program Files\Rhino 8\System\Rhino.exe</StartProgram>
    <DefineConstants>$(DefineConstants);RHINO8;NET7</DefineConstants>
  </PropertyGroup>
</Project>